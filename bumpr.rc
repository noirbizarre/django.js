[bumpr]
file = djangojs/__init__.py
vcs = git
commit = true
tag = true
tests = false
publish = python setup.py sdist register upload
clean =
    python setup.py clean
    rm -rf *egg-info build dist
files =
    README.rst
    bower.json

[bump]
unsuffix = true

[prepare]
part = patch
suffix = dev

[changelog]
file = CHANGELOG.rst
bump = {version} ({date:%Y-%m-%d})
prepare = Current

[readthedoc]
id = djangojs
